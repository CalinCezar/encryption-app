<UserControl x:Class="EncryptProjectTSI.CustomControls.UserControls.InputText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EncryptProjectTSI.CustomControls.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="390" d:DesignWidth="400">
    <Grid>
        <TextBox x:Name="txtInput" TextChanged="txtInput_TextChanged" Background="Transparent" TextWrapping="Wrap" AcceptsReturn="True" TextAlignment="Justify"/>
        <!-- Placeholder TextBlock -->
        <TextBlock x:Name="tbPlaceHolder" Text="Input Text" FontWeight="Light" Foreground="DarkGray" Margin="5,0,0,0"
                   Panel.ZIndex="-1" />
        <!-- Clear Button -->
        <Button x:Name="btnClear" Width="30" HorizontalAlignment="Right" Content="X" VerticalAlignment="Top"
                Foreground="Red" BorderThickness="0" Click="btnClear_Click"/>
    </Grid>
</UserControl>
